{
  "parser": "babel-eslint",
  "extends": ["airbnb"],
  "env": {
    "browser": true,
    "es6": true
  },
  "rules": {
    "max-len": [1, 70, 2, {"ignoreComments": true}],
    "no-console": 0,
    "linebreak-style": 0,
    //"react/prefer-stateless-function": "off"
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  }
}